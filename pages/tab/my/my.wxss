/* 个人名片样式 */
.userinfo {
	display: flex;
	flex-direction: column;
  margin: 30rpx 30rpx;
	padding: 50rpx 0;
	align-items: center;
	background: rgb(219, 130, 132);
  height: 260rpx;
  border-radius: 50rpx;
}
.userinfo-avatar {
	width: 128rpx;
	height: 128rpx;
	margin: 20rpx;
	border-radius: 50%;
}
.userinfo-nickname {
	color: #fff;
}
