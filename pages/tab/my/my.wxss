.menu-list {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.menu-btn {
  align-items: center;
  font-size: 13pt;
  padding: 0 30rpx;
  display: flex;
  background-color: #fff;
  min-height: 85rpx;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
.issue-link, .about-link {
  margin-bottom: 20rpx;
}
.btn-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}
.btn-text {
  flex: 1;
}
.btn-open {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-left: 10rpx;
}
.btn-enter {
  width: 18rpx;
  height: 27rpx;
}
