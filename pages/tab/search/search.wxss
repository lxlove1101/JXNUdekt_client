.swiper-tab {
  text-align: center;
  background-color: #ffffff;
  line-height: 86rpx;
}

.tab-list-left {
  font-size: 30rpx;
  display: inline-block;
  width: 35%;
  line-height: 60rpx;
  border: 1px solid #962F30;
  border-radius:25rpx 0 0 25rpx;
  color: #962F30;
}

.tab-list-right {
  font-size: 30rpx;
  display: inline-block;
  width: 35%;
  line-height: 60rpx;
  border: 1px solid #962F30;
  border-radius:0 25rpx 25rpx 0;
  color: #962F30;
}

.on {
  color: #fff;
  background-color: #962F30;
}

.swiper-container {
  top: 86rpx;
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}
